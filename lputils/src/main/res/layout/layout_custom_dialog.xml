<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/llRoot"
        android:layout_width="@dimen/x600"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:background="@mipmap/popup_bg_night">

        <TextView
            android:id="@+id/tvHeadTitle"
            style="@style/main_text"
            android:layout_width="match_parent"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="@dimen/x36"
            android:paddingTop="@dimen/y36"
            android:paddingEnd="@dimen/x36"
            android:singleLine="true"
            android:textSize="@dimen/sizeT2"
            android:visibility="visible"
            tools:text="headTitle" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/main_text"
            android:layout_width="match_parent"
            android:padding="@dimen/x36"
            android:textSize="@dimen/sizeL"
            tools:text="title" />

        <View
            android:id="@+id/vLine"
            style="@style/line_h" />

        <LinearLayout
            android:id="@+id/llConfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y84">

            <TextView
                android:id="@+id/tvLeft"
                style="@style/main_text"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="@dimen/sizeL"
                android:visibility="visible"
                tools:text="left" />

            <TextView
                android:id="@+id/tvRight"
                style="@style/main_text"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="@dimen/sizeL"
                android:visibility="visible"
                tools:text="end" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>